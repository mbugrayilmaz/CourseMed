<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.coursemed.gui.admin.AdminManageTeachersControllers"
      alignment="CENTER"
      style="-fx-padding: 50; -fx-font-size: 15"
      spacing="10"
      prefHeight="400.0" prefWidth="600.0">

    <TableView fx:id="teacherTable" items="${controller.teacherList}">
        <columns>
            <TableColumn text="Username" prefWidth="${teacherTable.width * 0.2}">
                <cellValueFactory>
                    <PropertyValueFactory property="username"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Password" prefWidth="${teacherTable.width * 0.2}">
                <cellValueFactory>
                    <PropertyValueFactory property="password"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="First Name" prefWidth="${teacherTable.width * 0.2}">
                <cellValueFactory>
                    <PropertyValueFactory property="firstName"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Last Name" prefWidth="${teacherTable.width * 0.2}">
                <cellValueFactory>
                    <PropertyValueFactory property="lastName"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Balance" prefWidth="${teacherTable.width * 0.2}">
                <cellValueFactory>
                    <PropertyValueFactory property="balanceString"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <TilePane alignment="CENTER" hgap="10" vgap="10">
        <Button onAction="#onDeleteTeacher" maxWidth="200">Delete Teacher</Button>
        <Button onAction="#onBack" maxWidth="200">Back</Button>
    </TilePane>
</VBox>