<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.coursemed.gui.admin.AdminManageAdminsController"
      alignment="CENTER"
      style="-fx-padding: 50"
      prefHeight="400.0" prefWidth="600.0">

    <TableView fx:id="adminTable" items="${controller.adminList}">
        <columns>
            <TableColumn text="Username" prefWidth="${adminTable.width * 0.25}">
                <cellValueFactory>
                    <PropertyValueFactory property="username"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Password" prefWidth="${adminTable.width * 0.25}">
                <cellValueFactory>
                    <PropertyValueFactory property="password"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="First Name" prefWidth="${adminTable.width * 0.25}">
                <cellValueFactory>
                    <PropertyValueFactory property="firstName"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Last Name" prefWidth="${adminTable.width * 0.25}">
                <cellValueFactory>
                    <PropertyValueFactory property="lastName"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#onBack">Back</Button>
        <Button onAction="#onDeleteAdmin">Delete Admin</Button>
        <Button onAction="#onAddAdmin">Add Admin</Button>
    </HBox>
</VBox>
