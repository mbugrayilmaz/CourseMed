<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.coursemed.gui.TeacherAddSubjectController"
      alignment="CENTER"
      style="-fx-padding: 100"
      spacing="20"
      prefHeight="400.0" prefWidth="600.0">

<TextField fx:id="titleField" promptText="Course Title"/>
<TextField fx:id="videoUrlField" promptText="Video URL"/>
<Label fx:id="infoLabel"/>

<Button onAction="#onAddSubject">Create Course</Button>
<Button onAction="#onCancel">Cancel</Button>
</VBox>