<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.coursemed.gui.student.StudentDepositMoneyController"
      alignment="CENTER"
      style="-fx-padding: 50; -fx-font-size: 20"
      spacing="20"
      prefHeight="400.0" prefWidth="600.0">

    <Label fx:id="balanceLabel" style="-fx-font-size: 40"/>

    <Label fx:id="infoLabel" style="-fx-text-fill: darkred"/>

    <HBox alignment="CENTER">
        <TextField fx:id="amountField" promptText="Amount"/>
        <Button onAction="#onDeposit">Deposit</Button>
    </HBox>

    <Button onAction="#onBack">Back</Button>

</VBox>
